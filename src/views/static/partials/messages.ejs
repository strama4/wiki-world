<% if(messages.error || messages.notice) { %>
    <div class="alert alert-<%= messages.error ? 'danger' : 'warning' %> alert-dismissable fade show" role="alert">
       <button type="button" class="close" data-dismiss="alert" aria-label="close">
           <span aria-hidden="true">&times;</span>
       </button>
    <% if(messages.error) { %> 
        Validation errors:
       <ul>
           <% messages.error.forEach((err) => { %>
            <li><%= `${err}` %></li>
           <% }) %>
       </ul>
    <% } else { %>
        <p><%= messages.notice %></p>
    <% } %>
    </div>
<% } %>
